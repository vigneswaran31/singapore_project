@using HelpDeskEntity
@using HelpDeskEntity.Classes
@using HelpDeskBAL
@{
    var oUser = (User)Session[En_UserSession.User.ToString()];
    string PortalTitle = new ConfigsBL().GetByName(En_Config.PortalTitle.ToString()).Value;
}
<div id="navbar" class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-container" id="navbar-container">
        <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
            <span class="sr-only">Toggle sidebar</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="navbar-header pull-left">
            <a href="#" class="navbar-brand">
                <small>
                    @PortalTitle
                </small>
            </a>
        </div>
        <div class="navbar-buttons navbar-header pull-right" role="navigation">
            <div class="l" style="padding:1px 10px 0 0">
                <script src='@Url.Content("~/CuteSoft_Client/CuteChat/Support-Image-Button.js.aspx")'></script>
            </div>
            <ul class="nav ace-nav l">
                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                        <img class="nav-user-photo" src="@Url.Content("~/Content/images/user.png")" />
                        <span class="user-info">
                            <small>@ViewBag.LngWelcome,</small>
                            @oUser.Name
                        </span>
                        <i class="ace-icon fa fa-caret-down"></i>
                    </a>
                    <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                        <li>
                            <a href="/Home/ChangePassword">
                                <i class="ace-icon fa fa-key"></i>
                                @ViewBag.LngChangePassword
                            </a>
                        </li>
                        <li>
                            <a href="/Dashboard/MyProfile">
                                <i class="ace-icon fa fa-user"></i>
                                @ViewBag.LngMyProfile
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Home/Logout">
                                <i class="ace-icon fa fa-power-off"></i>
                                @ViewBag.LngLogout
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
