@model List<HelpDeskEntity.KBArticle>

<script type="text/javascript">

    function View(id)
    {
        $('#dvRow').block();
        $("#dvLoadData").load("/Account/Knowledgebase/ViewKBArticle?id=" + id, function () { $('#dvRow').unblock(); });
        $("#div").hide();
    }

</script>
<div class="row">
    <div class="col-xs-12">
        @if (Model.Count > 0)
        {
            <table class="table table-bordered table-striped" id="simple-table">
                <thead>
                    <tr>
                        <th>Article Title</th>
                        <th style="text-align:center;width:50px;">Read</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.ToList())
                    {
                        <tr>
                            <td>
                                @obj.Title
                            </td>
                            <td style="text-align:center; "><a href="javascript:void(0);" onclick="View('@obj.ArticleId');"><span class="ace-icon fa fa-search icon-on-right bigger-110"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">No Knowledgebase Articles.</div>
        }
    </div><!-- /.span -->
</div>
