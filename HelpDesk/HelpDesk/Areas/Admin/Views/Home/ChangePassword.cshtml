@model  HelpDesk.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
}
<script type="text/javascript">

    function Cancel() {
        window.location.href = "/Admin/Dashboard/Index";
    }

 </script>

@Html.Partial("_ResultMessage")
<div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Dashboard")">Home</a>
        </li>
        <li class="active">Change Password</li>
    </ul>

</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            Change Password
        </h1>
    </div>

    <div class="row" id="ManageData">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "form-horizontal", Id = "Manage-ChangePassword-Form" }))
            {
                <!-- #section:elements.form -->

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Current Password</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(c => c.OldPassword, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(c => c.OldPassword)
                    </div>
                </div>

                 <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> New Password</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(c => c.NewPassword, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(c => c.NewPassword)
                    </div>
                </div>
                
                 <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Confirm Password</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(c => c.ConfirmPassword, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(c => c.ConfirmPassword)
                    </div>
                </div>
                
                <div class="clearfix form-group form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-sm btn-primary" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Save
                        </button>
                        &nbsp;
                        <button class="btn btn-sm" type="button" onclick="Cancel();">
                            <i class="ace-icon fa fa-times"></i>
                            Cancel
                        </button>
                    </div>
                </div>
            }
        </div><!-- /.col -->
    </div><!-- /.row -->
</div>

