@model HelpDeskEntity.User

<script type="text/javascript">
    $(document).ready(function () {
        //apply checkbox ace design
        $('<span class="lbl"></span>').insertAfter(":checkbox");

        $.validator.unobtrusive.parse($("#Manage-User-Form"));

        if ('@Model.UserId' == 0) {
            $("#Password").rules("add", { required: true, messages: { required: "Please enter Password." } });
        }
    })
</script>
<div class="col-xs-12">

    @using (Html.BeginForm("Save", "Users", FormMethod.Post, new { @class = "form-horizontal", Id = "Manage-User-Form" }))
    {
        @Html.HiddenFor(c => c.UserId)
        @Html.HiddenFor(c => c.CreatedOn)
        @Html.HiddenFor(c => c.CreatedBy)

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Name</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(c => c.Name, new { @class = "col-xs-10 col-sm-5" })
                @Html.ValidationMessageFor(c => c.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Int. role</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(c => c.RoleDescription, new { @class = "col-xs-10 col-sm-5" })            
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Email</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(c => c.Email, new { @class = "col-xs-10 col-sm-5" })
                @Html.ValidationMessageFor(c => c.Email)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Password</label>
            <div class="col-sm-5">
                @Html.PasswordFor(c => c.Password, new { @class = "col-xs-10 col-sm-5" })
                <span data-valmsg-replace="true" data-valmsg-for="Password" class="field-validation-valid"></span>
            </div>
        </div>        
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Contact 1</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(c => c.Contact, new { @class = "col-xs-10 col-sm-7" })
            </div>

            <div class="col-sm-1"><b>Description</b></div>
            <div class="col-sm-3">
                @Html.PasswordFor(c => c.ContactDescription, new { @class = "col-xs-10 col-sm-7" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Contact 2</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(c => c.Contact1, new { @class = "col-xs-10 col-sm-7" })
            </div>

            <div class="col-sm-1"><b>Description</b></div>
            <div class="col-sm-3">
                @Html.PasswordFor(c => c.Contact1Description, new { @class = "col-xs-10 col-sm-7" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Skype</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(c => c.Skype, new { @class = "col-xs-10 col-sm-5" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="light-red">*</span> Role</label>
            <div class="col-sm-9">
                @Html.DropDownListFor(p => p.RoleId, new SelectList(ViewBag.lstRoles as System.Collections.IEnumerable, "Value", "Text"), "--- Select ---", new { @class = "col-xs-10 col-sm-5" })
                @Html.ValidationMessageFor(c => c.RoleId)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Is Enable </label>
            <label class="col-sm-9 " style="margin-top:6px">
                @Html.CheckBoxFor(c => c.IsEnable, new { @class = "ace" })
            </label>
        </div>
        <div class="clearfix form-group form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-sm btn-primary" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Save
                </button>
                &nbsp;
                <button class="btn btn-sm" type="button" onclick="window.location='/Admin/Users/Index'">
                    <i class="ace-icon fa fa-times"></i>
                    Cancel
                </button>
            </div>
        </div>
    }
</div>
